<%= simple_form_for(flat) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :address, "Address" %>
  <%= f.text_field :address %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :price_per_night, "Price per night" %>
  <%= f.text_field :price_per_night %>

  <%= f.label :number_of_guests, "Number of guests" %>
  <%= f.text_field :number_of_guests %>

  <%= f.submit "Submit" %>
<% end %>
  